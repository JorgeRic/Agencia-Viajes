
<h2 class="titulo">{{pagina}}</h2>

<h4 class="blockquote">Lee sobre nuestros clientes y sus experiencias</h4>

{{#if errores}}
    <p class="alert alert-danger">{{errores}}</p>
{{/if}}

  <div class="contenedor-opinion">
{{#each opiniones}}
    <div class="opinion-opinion">
      <img src="img/quote.jpg" class="comillas-opinion">
      <p class="testimoniales">{{mensaje}}</p>
      <p class="blockquote-footer">{{nombre}}</p>
    </div>
{{/each}}
</div>



<form method="POST" action="/opiniones" class="form-group">
  <label for="nombre">Ingrese su nombre</label>
  <input type="text" id="nombre"  name="nombre" placeholder="nombre" class="form-control" value="{{nombre}}">
  <label for="mail">Ingrese su mail</label>
  <input type="mail" id="mail" name="mail" placeholder="mail" class="form-control" value="{{mail}}">
  <label for="mensaje">Mensaje</label>
  <textarea id="mensaje" rows="3" name="mensaje" placeholder="mensaje" class="form-control" value="{{mensaje}}"></textarea>
  <div class="centrar-button">
    <button type="submit" class="btn btn-success btn-block">Nuevo Mensaje</button>
  </div>
</form> 

